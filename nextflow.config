profiles {
    singularity {
        process.executor = "local"
        process.container = "esteinig/sketchy:latest"
        singularity.enabled = true
        singularity.autoMounts = true
    }

    docker {
        process.executor = "local"
        process.container = "esteinig/sketchy:latest"
        docker.enabled = true
    }

}

params {

    bbuild       = true
    iid          = "$HOME/sketchy_rewrite/saureus_filtered/iid.csv"
    survey       = "/data/Sketchy/saureus"
    features     = "$HOME/sketchy_rewrite/saureus.reference.tsv"
    samples      = [10, 20]
    bootstraps   = 1..5


}

process {

    errorStrategy = "ignore"
    scratch = false

    withLabel: sketchy {
        cpus = 4
        memory = "8G"
        time = "24h"
    }
    withLabel: build {
        cpus = 4
        memory = "8G"
        time = "8h"
    }

}
