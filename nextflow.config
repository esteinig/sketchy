params {

    sketch_mem = "8G"
    sketch_cpus = 4
    sketch_time = "2h"

    batch_predict_mem = "16G"
    batch_predict_cpus = 1
    batch_predict_time = "2h"
}

process {
    withLabel: sketch {
        cpus = params.sketch_cpus
        memory = params.sketch_mem
        time = params.sketch_time
    }
    withLabel: predict {
        cpus = params.batch_predict_cpus
        memory = params.batch_predict_mem
        time = params.batch_predict_time
    }
}

profiles {
    local {
        process.executor = 'local'
    }
    slurm {
        process.executor = 'slurm'
    }
}