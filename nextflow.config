params {

    executable = null

    sketch_mem = "8G"
    sketch_cpus = 4
    sketch_time = "2h"

    predict_mem = "16G"
    predict_cpus = 1
    predict_time = "2h"
}

process {
    withLabel: sketch {
        cpus = params.sketch_cpus
        memory = params.sketch_mem
        time = params.sketch_time
    }
    withLabel: predict {
        cpus = params.predict_cpus
        memory = params.predict_mem
        time = params.predict_time
    }
}

profiles {
    local {
        process.executor = 'local'
    }
    slurm {
        process.executor = 'slurm'
    }
}